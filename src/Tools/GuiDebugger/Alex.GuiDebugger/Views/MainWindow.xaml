<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        xmlns:views="clr-namespace:Alex.GuiDebugger.Views"
        xmlns:vm="clr-namespace:Alex.GuiDebugger.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Alex.GuiDebugger.Views.MainWindow"
        MinWidth="256"
        MinHeight="256"
        Icon="/Assets/Alex.ico"
        Title="Alex GUI Inspector"
        Background="{DynamicResource ThemeBackgroundBrush}">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  
  <DockPanel LastChildFill="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

    <idc:DockControl DataContext="{Binding Layout}" />
    
  </DockPanel>
  
</Window>
