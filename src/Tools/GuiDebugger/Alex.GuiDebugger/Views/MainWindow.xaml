<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Alex.GuiDebugger.Views"
        xmlns:vm="clr-namespace:Alex.GuiDebugger.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Alex.GuiDebugger.Views.MainWindow"
        MinWidth="256"
        MinHeight="256"
        Icon="/Assets/Alex.ico"
        Title="Alex GUI Inspector">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  
  <DockPanel>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition />
      </Grid.RowDefinitions>
    
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="4*" />
      </Grid.ColumnDefinitions>

      <views:ElementTreeView Grid.Column="0" />
      <GridSplitter Grid.Column="1" />
    </Grid>
  </DockPanel>
  
</Window>
