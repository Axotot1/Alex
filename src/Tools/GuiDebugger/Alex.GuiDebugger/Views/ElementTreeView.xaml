<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Alex.GuiDebugger.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Alex.GuiDebugger.Views.ElementTreeView">
    
  <Grid>

    <TreeView>
      <TreeView.DataTemplates>
        <TreeDataTemplate DataType="{x:Type models:ElementTreeItem}" >
          <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding ElementType}" />
              <TextBlock Text="[" />
              <TextBlock Text="{Binding ChildElements.Count}" />
              <TextBlock Text="]" />
          </StackPanel>
        </TreeDataTemplate>        
      </TreeView.DataTemplates>
      
    </TreeView>
    
  </Grid>
  
</UserControl>
