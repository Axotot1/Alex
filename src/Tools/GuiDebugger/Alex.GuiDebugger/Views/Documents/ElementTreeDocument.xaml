<UserControl
    x:Class="Alex.GuiDebugger.Views.Documents.ElementTreeDocument"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        Background="Gray"
        Focusable="True"
        RowDefinitions="Auto,*">

        <Button Grid.Row="0" Command="{Binding RefreshPropertiesCommand}">Refresh Properties</Button>

        <DataGrid
            Name="PropertiesDataGrid"
            Grid.Row="1" CanUserResizeColumns="True" CanUserReorderColumns="False">
          <DataGrid.Columns>
            <DataGridTextColumn
                Width="*"
                    Binding="{Binding Name}"
                    Header="Name" />
            <DataGridTextColumn
                Width="2*"
                    Binding="{Binding Value}"
                    Header="Value" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
