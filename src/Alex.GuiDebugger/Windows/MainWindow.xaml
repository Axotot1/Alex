<Window
    x:Class="Alex.GuiDebugger.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Alex.GuiDebugger.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Alex.GuiDebugger"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Alex.GuiDebugger.Models"
    xmlns:viewModels="clr-namespace:Alex.GuiDebugger.ViewModels"
    xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Alex Gui Debugger"
    Width="300"
    Height="450"
    Background="{DynamicResource WindowBackgroundBrush}"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <ToolBar DockPanel.Dock="Top" ToolBarTray.IsLocked="True">
            <ToggleButton>Show Selection</ToggleButton>
        </ToolBar>
        <Grid>
            <TabControl>
                <TabItem Header="Element Tree">
                    <TreeView Name="_elementTreeView" ItemsSource="{Binding ElementTreeItems}">
                        <TreeView.Resources>
                            <HierarchicalDataTemplate DataType="{x:Type models:GuiElementItem}" ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Type}" />
                                    <TextBlock Foreground="Blue" Text=" [" />
                                    <TextBlock Foreground="Blue" Text="{Binding Children.Count}" />
                                    <TextBlock Foreground="Blue" Text="]" />
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </TabItem>
                <TabItem Header="Properties">
                    <controls:PropertyGrid Item="{Binding ElementName=_elementTreeView, Path=SelectedItem, Mode=OneWay}" />
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
